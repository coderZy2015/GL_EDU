<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/menu_book_data_header_bg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#aa000000" />

    <ImageView
        android:id="@+id/menu_book_data_header_book"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/menu_book_data_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/menu_book_data_header_book"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:text="书名"/>

    <TextView
        android:id="@+id/menu_book_data_header_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@id/menu_book_data_header_name"
        android:layout_toRightOf="@id/menu_book_data_header_book"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/menu_book_data_header_buy"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="购 买"
        android:layout_below="@id/menu_book_data_header_price"
        android:layout_toRightOf="@id/menu_book_data_header_book"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/cost_text"
        android:textSize="16sp"
        android:background="@drawable/corner_buy"/>



</RelativeLayout>
