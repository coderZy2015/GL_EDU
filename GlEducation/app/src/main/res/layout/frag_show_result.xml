<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera_search_ques_body"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/ques_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="@string/camera_search_ques_answer_txt"/>

    <TextView
        android:id="@+id/answer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="left"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  反馈  "
            android:padding="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/blue_corner_dis"
            android:textColor="@color/home_detail_top"
            android:textSize="14dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_into_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/camera_top"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/btn_into_content"
            android:layout_width="300dp"
            android:layout_height="31dp"
            android:layout_below="@+id/text_introduce"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_into_explanation"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    
</LinearLayout>